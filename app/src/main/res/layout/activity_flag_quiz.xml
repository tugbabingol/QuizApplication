<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flag_background"
    tools:context=".FlagQuizActivity">


    <ImageView
        android:id="@+id/heart1"
        android:layout_width="33dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/kalp" />

    <ImageView
        android:id="@+id/heart2"
        android:layout_width="33dp"
        android:layout_height="25dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/kalp"/>

    <ImageView
        android:id="@+id/heart3"
        android:layout_width="33dp"
        android:layout_height="25dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/kalp"/>

    <ImageView
        android:id="@+id/flag_imageView"
        android:layout_width="333dp"
        android:layout_height="212dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="30dp"
        android:scaleType="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heart3"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/SecenekA"
        android:layout_width="271dp"
        android:layout_height="33dp"
        android:layout_below="@+id/flag_imageView"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/shape"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/SecenekB"
        android:layout_width="271dp"
        android:layout_height="33dp"
        android:layout_below="@+id/SecenekA"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/shape"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/SecenekC"
        android:layout_width="271dp"
        android:layout_height="33dp"
        android:layout_below="@+id/SecenekB"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/shape"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/SecenekD"
        android:layout_width="271dp"
        android:layout_height="33dp"
        android:layout_below="@+id/SecenekC"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/shape"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp" />


</RelativeLayout>