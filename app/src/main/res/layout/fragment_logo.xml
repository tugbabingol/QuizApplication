<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logo_background"
    tools:context="LogoFragment">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/broken_heart"
                    android:layout_width="65dp"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"

                    android:src="@drawable/heart_foreground" />

                <ImageView
                    android:id="@+id/broken_heart2"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"

                    android:src="@drawable/heart_foreground" />

                <ImageView
                    android:id="@+id/broken_heart3"

                    android:layout_width="65dp"
                    android:layout_height="wrap_content"

                    android:src="@drawable/heart_foreground" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the brand of this logo?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/logo_imageView"
            android:layout_width="333dp"
            android:layout_height="212dp"


            android:layout_marginStart="8dp"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="center"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_imageView">

                <TextView
                    android:id="@+id/SecenekA"
                    android:layout_width="271dp"
                    android:layout_height="33dp"
                    android:background="@drawable/shape"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/SecenekB"
                    android:layout_width="271dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/SecenekA"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/SecenekC"
                    android:layout_width="271dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/SecenekB"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/SecenekD"
                    android:layout_width="271dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/SecenekC"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="25dp" />
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>